<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LatoFont">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="LatoFont.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LatoFont.White.CityName">
        <item name="android:layout_marginTop">@dimen/margin_city_name</item>
        <item name="android:layout_marginStart">@dimen/margin_city_name</item>
        <item name="android:textSize">@dimen/text_size_city_name</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LatoFont.WhiteSelectorSmallText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@drawable/selector_small_text_color</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="LatoFont.White.SmallText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="LatoFont.White.SmallText.Margin">
        <item name="android:layout_marginEnd">@dimen/margin_edge</item>
        <item name="android:layout_marginStart">@dimen/margin_edge</item>
    </style>

    <style name="LatoFont.White.Description">
        <item name="android:textSize">@dimen/text_size_char</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">@dimen/margin_edge</item>
        <item name="android:layout_marginStart">@dimen/margin_edge</item>
    </style>

    <style name="LatoFont.White.Info">
        <item name="android:textSize">@dimen/text_size_char</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LatoFont.White.Big">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="LatoFont.White.DegreeText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:alpha">0.3985</item>
        <item name="android:layout_marginTop">@dimen/margin_degree_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_degree_end</item>
    </style>

    <style name="SwitchButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">@dimen/switch_button_width</item>
        <item name="android:minHeight">@dimen/switch_button_height</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textColor">@drawable/selector_char_color</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_char</item>
        <item name="backgroundTint">@drawable/selector_background_color</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="LatoFont.EditText">
        <item name="android:layout_marginEnd">@dimen/margin_input_text</item>
        <item name="android:layout_marginStart">@dimen/margin_input_text</item>
        <item name="android:background">@color/white</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapWords|textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/OK_blue</item>
        <item name="android:textColorHint">@color/OK_blue</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="LatoFont.OK">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/margin_input_text</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_ok</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_ok</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@drawable/selector_ok</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

</resources>